{
    "resque-workers":{
        "sets": {
            "app": {
                "type":"core-application",
                "path":"~/www/app.simplytestable.com"

            },
            "hydrogen": {
                "type":"worker",
                "path":"~/www/hydrogen.worker.simplytestable.com"
            },
            "lithium": {
                "type":"worker",
                "path":"~/www/lithium.worker.simplytestable.com"
            },
            "helium": {
                "type":"worker",
                "path":"~/www/helium.worker.simplytestable.com"
            },
            "beryllium": {
                "type":"worker",
                "path":"~/www/beryllium.worker.simplytestable.com"
            }             
        },
        "commands": {
            "start":{
                "core-application": {
                    "command": "php app/console resque:worker {name},worker-activate-verify,task-cancel,job-prepare,job-mark-completed,task-assign,task-assignment-selection --log verbose --forkCount 5 --daemon",
                    "logpath": "app/logs/resque.log"
                },
                "worker": {
                    "command": "php app/console resque:worker {name},task-cancel,task-report-completion,task-perform --log verbose --forkCount 3 --daemon",
                    "logpath": "app/logs/resque.log"
                }
            },
            "restart":{
                
            }
        }        
    }        
}